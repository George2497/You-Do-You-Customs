

<h3><a class="btn btn-secondary" href="/staff">Create New</a>staff List</h3>

<table class ="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th>Number</th>
            <th>Main Address</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.username}}</td>
            <td>{{this.password}}</td>
            <td>{{this.email}}</td>
            <td>{{this.number}}</td>
            <td>{{this.mainAddress}}</td>
            <td>
                <a class="btn btn-primary btn-sm" href="/staff/{{this.id}}"> Edit</a>
                <a class="btn btn-primary btn-sm" href="/staff/delete/{{this.id}}"
                onclick="return confirm('are you sure you want to delete this record?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>

    
</table>

